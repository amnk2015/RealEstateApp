<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RealEstateApp.Pages.SettingsPage">
    <VerticalStackLayout Margin="20">
        <Label Text="Settings" 
               HorizontalOptions="Center"
               FontSize="Large"/>
        <VerticalStackLayout Margin="0,40,0,40" Spacing="20">
            <HorizontalStackLayout>
                <Image Source="about_icon"
                       HeightRequest="30"
                       WidthRequest="30"/>
                <Label Text="About"
                       VerticalOptions="Center"
                       FontSize="Medium"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Image Source="privacy_icon"
            HeightRequest="30"
            WidthRequest="30"/>
                <Label Text="Privacy &amp; Security"
            VerticalOptions="Center"
            FontSize="Medium"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Image Source="faq_icon"
            HeightRequest="30"
            WidthRequest="30"/>
                <Label Text="Help and support"
            VerticalOptions="Center"
            FontSize="Medium"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <Image Source="logout_icon"
            HeightRequest="30"
            WidthRequest="30"/>
                <Label Text="Logout"
            VerticalOptions="Center"
            FontSize="Medium"/>
                <HorizontalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer x:Name="TapLogout" Tapped="TapLogout_Tapped"  > 
                    </TapGestureRecognizer>
                </HorizontalStackLayout.GestureRecognizers>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>